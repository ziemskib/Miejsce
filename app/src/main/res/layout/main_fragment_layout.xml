<?xml version="1.0" encoding="utf-8"?>
<!-- layout ekranu glownego (z kategoriami) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.bartek.miejsce.app.MainFragment">
    <ViewFlipper
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/viewFlipper"
        android:scaleType="centerCrop">
    </ViewFlipper>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="22dp"
            android:paddingRight="5dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="end"
            android:textColor="#FFFFFF"
            android:layout_weight="0.3"
            android:textAlignment="viewEnd"/>
    </LinearLayout>

    <!--
        przycisk next na zdjeciach
         ustalic jak ma wygladac
    -->
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:text="@string/next"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:textColor="#ffffff" />

    <!-- przycisk wstecz na zdjeciach -->
    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:text="@string/prev"
        android:textSize="40sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/next"
        android:background="@android:color/transparent"
        android:textColor="#ffffff" />





    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_below="@id/viewFlipper">

        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal">


            <!-- 1. cattegory button -->
            <ImageButton

                android:src="@drawable/kat1_button"
                android:id="@+id/kat1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"/>

            <!-- 2. cattegory button -->
            <ImageButton
                android:src="@drawable/kat1_button"
                android:id="@+id/kat2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"/>


        </LinearLayout>

        <LinearLayout
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal">



            <!-- 3. cattegory button -->
            <ImageButton
                android:src="@drawable/kat1_button"
                android:id="@+id/kat3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"/>

            <!-- 4. cattegory button -->
            <ImageButton
                android:src="@drawable/kat1_button"
                android:id="@+id/kat4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>